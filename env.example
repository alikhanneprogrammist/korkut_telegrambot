# Токен бота (получить у @BotFather)
TELEGRAM_TOKEN=your_bot_token_here

# ID канала (для приватного канала формат: -1001234567890)
# Можно получить через @userinfobot или через API бота
CHANNEL_ID=-1001234567890

# Ссылка на канал (пригласительная ссылка)
CHANNEL_LINK=https://t.me/your_channel_link

# ID администратора (ваш Telegram ID)
# Можно получить через @userinfobot
ADMIN_ID=123456789

# === Robokassa ===
# Идентификатор магазина в Robokassa (MerchantLogin)
ROBOKASSA_MERCHANT_LOGIN=your_merchant_login

# Пароль #1 (для формирования подписи запроса на оплату)
ROBOKASSA_PASSWORD_1=your_password_1

# Пароль #2 (для проверки подписи уведомления об оплате)
ROBOKASSA_PASSWORD_2=your_password_2

# Тестовый режим Robokassa (True - тестовый, False - боевой)
ROBOKASSA_TEST_MODE=True

# Цена подписки в тенге
SUBSCRIPTION_PRICE=20000

# === Postgres ===
# Пример: postgresql+psycopg2://telegram_user:password@localhost:5432/telegram_sales
DATABASE_URL=postgresql+psycopg2://telegram_user:telegram_password@db:5432/telegram_sales

# Настройки встроенного Postgres контейнера (используются docker-compose)
POSTGRES_USER=telegram_user
POSTGRES_PASSWORD=telegram_password
POSTGRES_DB=telegram_sales
